{
  "include": ["src", "test", "build.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
